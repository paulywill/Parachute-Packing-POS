<%= form_for(@damage) do |f| %>
  <% if @damage.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@damage.errors.count, "error") %> prohibited this damage from being saved:</h2>

      <ul>
      <% @damage.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label Time.now.strftime("%m/%d/%Y %I:%M:%S %P") %><br />
  </div>
  <div class="field">
    <%= f.label "Damaged Rig:" %><br />
    <%= f.collection_select(:rig_id, @rigs, :id, :rig_type_number,  {:include_blank => true}) %><br />
  </div>
  <div class="field">
    <%= f.label "Damage Detail" %><br />
    <%= f.text_area :dam_detail %><br />
  </div>
  <div class="field">
    <%= f.label "Damage Reporter" %><br />
    <%= f.collection_select(:packer_id, @packers, :id, :p_name, { :include_blank => true} ) %><br
  </div>
  <div class="field">
    <%= f.label "Damage Fixed?" %><br />
    <%= f.check_box :dam_fixed %><br />
  </div><br />
  <div class="actions">
    <br />
    <%= f.submit %>
  </div>
<% end %>
